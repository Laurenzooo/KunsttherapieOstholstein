---
import Layout from '../layouts/Layout.astro';
import LuebeckSEOPage from '../components/pages-migration/LuebeckSEOPage.tsx';
import { getImage } from "astro:assets";

import heroImgAsset from "../assets/hero_background.webp";
import portraitImgAsset from "../assets/mikela-blanck-portrait.webp";
import atelierImgAsset from "../assets/mikela-blanck-malraum.webp";

const heroImg = await getImage({ src: heroImgAsset, width: 1920, format: 'webp' });
const portraitImg = await getImage({ src: portraitImgAsset, width: 800, format: 'webp' });
const atelierImg = await getImage({ src: atelierImgAsset, width: 1000, format: 'webp' });

const heroOptimized = { src: heroImg.src, srcSet: heroImg.srcSet.attribute };
const portraitOptimized = { src: portraitImg.src, srcSet: portraitImg.srcSet.attribute };
const atelierOptimized = { src: atelierImg.src, srcSet: atelierImg.srcSet.attribute };
---

<Layout 
	title="Kunsttherapie für Lübeck & Umgebung | Mikela Blanck Kunsttherapie" 
	description="Kunsttherapie für Lübeck und Umgebung – nur ca. 40 Minuten entfernt in Eutin. Maltherapie bei Trauer, Krisen und persönlichen Themen. Entdecke die heilende Kraft des Malens.">
	<LuebeckSEOPage 
		client:load 
		currentPath={Astro.url.pathname} 
		heroImg={heroOptimized}
		portraitImg={portraitOptimized}
		atelierImg={atelierOptimized}
	/>
</Layout>
